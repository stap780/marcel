<div class="col-lg-11 mx-auto">
  <div class="font-halvar text-uppercase shopping-cart-header fw-bold mb-4"><%= Spree.t(:log_in_to_continue) %></div>
  <%= form_for Spree.user_class.new, as: :spree_user, url: spree_login_path, data: { turbo: false } do |f| %>
    <div id="password-credentials" class="mb-4">
      <div class="form-group mb-4">
        <p class="form-group checkout-content-inner-field">
          <%= f.email_field :email, class: 'spree-flat-input', placeholder: Spree.t(:email), value: params.dig(:spree_user, :email) %>
        </p>
      </div>
      <div class="form-group mb-4">
        <p class="form-group checkout-content-inner-field">
          <%= f.password_field :password, class: 'spree-flat-input', placeholder: Spree.t(:password) %>
        </p>
      </div>
    </div>

    <% if Spree::Frontend::Config[:remember_me_enabled] %>
      <div class="spree-checkbox-container mt-4 my-sm-4 mt-lg-4">
        <div class="spree-checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, '' %>
        </div>

        <%= f.label :remember_me, Spree.t(:remember_me), class: 'spree-checkbox-label' %>
      </div>
    <% end %>

    <%= f.submit Spree.t(:login), class: 'btn btn-outline-dark border-radius-0 font-anonymus fs-5 border-radius-0 text-capitalize' %>
  <% end %>

  <% if spree.respond_to?(:recover_password_path) %>
    <div class="text-center forgot-password mb-4">
      <%= link_to Spree.t(:forgot_password), spree.recover_password_path %>
    </div>
  <% end %>
</div>