
<header class="border-bottom border-1 border-black py-4">
    <div class="container">
        <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-4 pt-1">
                <!-- Button -->
                <button class="navbar-toggler d-block ms-7" type="button" data-bs-toggle="offcanvas" data-bs-target="#modalSidebar" aria-controls="offcanvasmodalSidebar">
                    <span class="navbar-toggler-icon-svg">
                        <%= icon(name: 'burger_new', classes: 'd-inline-block', width: 20, height: 20) %>
                    </span>
                </button>
            </div>
            <div class="col-4 text-center">
                <%# logo %>
                <a href="/"><%= icon(name: 'logo', classes: '', width: 233, height: 83) %></a>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
                <nav class="navbar navbar-expand">
                <%= render partial: 'spree/shared/nav_bar_new' %>
                </nav>
            </div>
        </div>
    </div>
</header>
<% if spree_menu.present? %>
<div class="header-nav border-bottom border-1 border-black d-none d-lg-block">
    <div class="container">
        <%= render partial: 'spree/shared/main_nav_bar_new' %>
    </div>
</div>
<%end%>