<% url = spree.product_path(product, taxon_id: @taxon&.id) %>
<%= link_to url, class: 'd-flex flex-column justify-content-between text-decoration-none gap-3' do %>
  <% cache [common_product_cache_keys, product] do %>
    <%= plp_and_carousel_image(product, image_class) %>
    <div class="d-flex justify-content-between gap-3">
      <div class="product-component-name mt-0" title="<%= product.name %>">
        <%= product.name %>
      </div>
      <div class="product-component-price mt-0"><%= display_price(product) %></div>
    </div>
  <% end %>
<% end %>