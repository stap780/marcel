    <% item_count = simple_current_order&.item_count || 0 %>
    <%= render 'spree/shared/cart', class: 'd-inline-block', size: 30, item_count: item_count %>
  </li>

  <%= render partial: 'spree/shared/internationalization_options' %>

</ul>
