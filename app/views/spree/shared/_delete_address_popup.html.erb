<div class="mx-auto delete-address-popup">
  <div class="d-flex delete-address-popup-icon js-delete-address-popup-close-button">
    <%= inline_svg_tag "close.svg", class: "w-100" %>
  </div>

  <p class="delete-address-popup-header">
    <%= Spree.t("address_action_popup.delete_title") %>
  </p>

  <p class='delete-address-popup-text'>
    <%= Spree.t("address_action_popup.delete_text").html_safe %>
  </p>

  <div class="d-flex col-6 m-auto delete-address-popup-buttons justify-content-between align-items-center mt-5">
    <div class="btn btn-outline-dark border-radius-0 font-anonymus fs-5 border-radius-0 text-capitalize js-delete-address-popup-close-button"><%= Spree.t(:cancel) %></div>
    <a
      id="delete-address-popup-confirm"
      class="btn btn-outline-dark border-radius-0 font-anonymus fs-5 border-radius-0 text-capitalize delete-address-popup-button"
      data-method="delete"
      rel="nofollow"
      href="#">
      <%= Spree.t("address_action_popup.delete_button") %>
    </a>
  </div>
</div>