<% unless @product_properties.blank? %>
  <h3 class="product-details-subtitle d-flex justify-content-between" data-bs-toggle="collapse" data-bs-target="#product-properties" role="button" aria-expanded="false">
    <%= Spree.t(:details) %>
    <%= icon(name: 'arrow-right', classes: 'spree-icon-arrow spree-icon-arrow-down', width: 15, height: 15) %>
    </h3>
  <ul id="product-properties" class="m-0 list-unstyled product-properies collapse" data-hook>
    <% @product_properties.each do |product_property| %>
      <% if product_property.show_property? %>
        <li>
          <span class="font-weight-bold text-break"><%= product_property.property.presentation %>:</span>
          <span class="text-break"><%= product_property.value %></span>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>
